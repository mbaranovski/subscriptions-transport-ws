{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["es6", "esnext.asynciterable", "dom", "dom.iterable", "esnext"],
    "types": ["node"],
    "typeRoots": ["./types"]
  },
  "exclude": ["node_modules", "dist"]
}
